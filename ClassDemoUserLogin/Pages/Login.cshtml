@page
@model ClassDemoUserLogin.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row-cols-1">
        <h1>Login</h1>

        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label">Navn</label><br>
                <input asp-for="@Model.Name" class="form-control" /><br>
            </div>


            <div class="form-group">
                <label asp-for="@Model.Password1" class="control-label">Password</label><br>
                <input type="password" asp-for="@Model.Password1" class="form-control" /><br>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Password2" class="control-label">Bekræft Password</label><br>
                <input type="password" asp-for="@Model.Password2" class="form-control" /><br>
            </div>

            <div class="form-group">
                <input type="submit" value="Log In"  class="btn btn-success"/>
            </div>
        </form>

    </div>
</div>